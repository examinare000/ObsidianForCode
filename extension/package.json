{
  "name": "mdloggerforcode",
  "displayName": "MDlogger For Code (DEBUG)",
  "description": "Obsidian-like WikiLink functionality for VS Code",
  "version": "0.1.4-debug",
  "publisher": "mdloggerforcode",
  "engines": {
    "vscode": "^1.103.0"
  },
  "categories": [
    "Other",
    "Notebooks"
  ],
  "galleryBanner": {
    "color": "#1e1e1e",
    "theme": "dark"
  },
  "keywords": [
    "obsidian",
    "wikilink",
    "markdown",
    "notes",
    "linking"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/examinare000/mdloggerforcode.git"
  },
  "homepage": "https://github.com/examinare000/mdloggerforcode#readme",
  "bugs": {
    "url": "https://github.com/examinare000/mdloggerforcode/issues"
  },
  "activationEvents": [
    "onLanguage:markdown",
    "onCommand:mdlg.openQuickCapture"
  ],
  "main": "./out/src/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "mdlg.openOrCreateWikiLink",
        "title": "MDloggerForCode: Open or Create Wiki Link",
        "category": "MDloggerForCode"
      },
      {
        "command": "mdlg.insertDate",
        "title": "MDloggerForCode: Insert Date",
        "category": "MDloggerForCode"
      },
      {
        "command": "mdlg.insertTime",
        "title": "MDloggerForCode: Insert Time",
        "category": "MDloggerForCode"
      },
      {
        "command": "mdlg.preview",
        "title": "MDloggerForCode: Preview Markdown",
        "category": "MDloggerForCode"
      },
      {
        "command": "mdlg.test",
        "title": "MDloggerForCode: Test Command",
        "category": "MDloggerForCode"
      },
      {
        "command": "mdlg.openQuickCapture",
        "title": "MDloggerForCode: Open Quick Capture",
        "category": "MDloggerForCode"
      }
    ],
    "views": {
      "explorer": [
        {
          "id": "mdlg.quickCapture",
          "name": "Quick Capture"
        }
      ]
    },
    "keybindings": [
      {
        "command": "mdlg.openOrCreateWikiLink",
        "key": "ctrl+enter",
        "mac": "cmd+enter",
        "when": "editorTextFocus && mdlg.inWikiLink"
      },
      {
        "command": "mdlg.insertDate",
        "key": "alt+d",
        "when": "editorTextFocus"
      },
      {
        "command": "mdlg.insertTime",
        "key": "alt+t",
        "when": "editorTextFocus"
      },
      {
        "command": "mdlg.openQuickCapture",
        "key": "ctrl+alt+m",
        "when": "editorTextFocus"
      }
    ],
    "configuration": {
      "title": "MDloggerForCode",
      "properties": {
        "mdlg.vaultRoot": {
          "type": "string",
          "default": "",
          "description": "Vault root directory path"
        },
        "mdlg.noteExtension": {
          "type": "string",
          "default": ".md",
          "description": "Note file extension"
        },
        "mdlg.slugStrategy": {
          "type": "string",
          "enum": [
            "passthrough",
            "kebab-case",
            "snake_case"
          ],
          "default": "passthrough",
          "description": "File name transformation strategy"
        },
        "mdlg.dateFormat": {
          "type": "string",
          "default": "YYYY-MM-DD",
          "description": "Date insertion format"
        },
        "mdlg.timeFormat": {
          "type": "string",
          "default": "HH:mm",
          "description": "Time insertion format"
        },
        "mdlg.template": {
          "type": "string",
          "default": "",
          "description": "New note template"
        },
        "mdlg.notesFolder": {
          "type": "string",
          "default": "dailynotes",
          "description": "Daily notes directory path (relative to vault root)"
        },
        "mdlg.dailyNoteFormat": {
          "type": "string",
          "default": "YYYY-MM-DD.md",
          "description": "Daily note file name format"
        },
        "mdlg.captureSectionName": {
          "type": "string",
          "default": "Quick Capture",
          "description": "Section heading name inside the daily note to append captured items"
        }
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js",
    "test:unit": "mocha --require ts-node/register tests/unit/**/*.test.ts",
    "test:integration": "mocha --require ts-node/register tests/integration/**/*.test.ts",
    "package": "vsce package",
    "publish": "vsce publish"
  },
  "devDependencies": {
    "@types/chai": "^5.2.2",
    "@types/chai-as-promised": "^8.0.2",
    "@types/mocha": "^9.1.0",
    "@types/node": "16.x",
    "@types/vscode": "^1.103.0",
    "@typescript-eslint/eslint-plugin": "^5.45.0",
    "@typescript-eslint/parser": "^5.45.0",
    "@vscode/test-electron": "^2.2.0",
    "@vscode/vsce": "^2.22.0",
    "chai": "^6.0.1",
    "chai-as-promised": "^8.0.2",
    "eslint": "^8.28.0",
    "mocha": "^9.2.1",
    "ts-node": "^10.9.0",
    "typescript": "^4.9.4"
  },
  "dependencies": {
    "@ig3/markdown-it-wikilinks": "^1.0.0",
    "markdown-it": "^13.0.1"
  }
}
