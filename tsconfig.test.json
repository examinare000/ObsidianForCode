      "mocha",
      "chai",
      "node"
    ],
    "skipLibCheck": true,
    "strict": false
  },
  "ts-node": {
    "transpileOnly": false,
    "compilerOptions": {
      "module": "commonjs"
    }
  },
  "include": [
    "tests/**/*",
    "src/**/*"
  ]
}